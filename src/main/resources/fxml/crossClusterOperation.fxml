<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.esque.kafka.CrossClusterController">
    <left>
        <ListView fx:id="fromClusterTopicsList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <ListView fx:id="toClusterTopicsList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </right>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
            <items>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button mnemonicParsing="false" onAction="#startOperationClick" text="Start"
                                GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                        <Label text="FROM --&gt; TO" GridPane.columnSpan="3" GridPane.halignment="CENTER"/>
                        <ComboBox fx:id="fromClusterComboBox" prefWidth="150.0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="toClusterComboBox" prefWidth="150.0" GridPane.columnIndex="2"
                                  GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="30.0" minHeight="10.0" valignment="CENTER" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ListView prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                        <Label text="Running" GridPane.halignment="CENTER"/>
                        <HBox nodeOrientation="RIGHT_TO_LEFT" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                            <children>
                                <Button mnemonicParsing="false" onAction="#refreshOperationList" text="Refresh"/>
                                <Button mnemonicParsing="false" onAction="#stopSelectedOperation" text="Stop"/>
                            </children>
                        </HBox>
                        <ListView fx:id="runningOperationsList" prefHeight="200.0" prefWidth="200.0"
                                  GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
